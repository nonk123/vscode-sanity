{
    "name": "vscode-sanity-liveserver",
    "displayName": "sanity liveserver",
    "description": "sanity live-server for Visual Studio Code",
    "publisher": "nonk123",
    "version": "0.3.0",
    "license": "UNLICENSE",
    "icon": "tmpicon.png",
    "author": {
        "name": "nonk",
        "email": "me@nonk.dev",
        "url": "https://nonk.dev"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nonk123/vscode-sanity"
    },
    "keywords": [
        "sanity",
        "site generator",
        "live reload",
        "live preview",
        "html preview",
        "jinja2"
    ],
    "categories": [
        "Other"
    ],
    "pricing": "Free",
    "main": "./dist/extension.js",
    "activationEvents": [
        "workspaceContains:www/**/*.j2",
        "workspaceContains:www/**/*.scss",
        "workspaceContains:www/**/*.lua",
        "onStartupFinished"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "sanity liveserver",
            "properties": {
                "vscode-sanity-liveserver.path": {
                    "type": "string",
                    "default": null,
                    "scope": "machine-overridable",
                    "description": "The path to sanity executable."
                },
                "vscode-sanity-liveserver.port": {
                    "type": "number",
                    "default": 8000,
                    "scope": "machine-overridable",
                    "description": "The live-server port."
                },
                "vscode-sanity-liveserver.autoEnable": {
                    "type": "boolean",
                    "default": true,
                    "scope": "resource",
                    "description": "Run sanity on VS Code startup?"
                }
            }
        },
        "commands": [
            {
                "command": "vscode-sanity-liveserver.run",
                "title": "Run the sanity live-server",
                "category": "sanity"
            },
            {
                "command": "vscode-sanity-liveserver.stop",
                "title": "Stop the sanity live-server",
                "category": "sanity"
            },
            {
                "command": "vscode-sanity-liveserver.install",
                "title": "Install the latest sanity binary from GitHub",
                "category": "sanity"
            }
        ]
    },
    "scripts": {
        "esbuild-base": "esbuild ./extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "compile": "npm run esbuild-base -- --sourcemap",
        "pretest": "npm run compile && npm run lint",
        "test": "vscode-test",
        "lint": "eslint"
    },
    "engines": {
        "vscode": "^1.97.0"
    },
    "devDependencies": {
        "@types/mocha": "10.0.10",
        "@types/node": "25.0.2",
        "@types/node-fetch": "3.0.2",
        "@types/vscode": "1.97.0",
        "@vscode/test-cli": "0.0.12",
        "@vscode/test-electron": "2.5.2",
        "esbuild": "0.27.0",
        "eslint": "9.39.1",
        "typescript": "5.9.3"
    },
    "dependencies": {
        "node-fetch": "3.3.2"
    }
}
